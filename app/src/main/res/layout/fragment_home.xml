<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cardImage1"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/lightGreen"
            android:contentDescription="@string/greencard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.031" />

        <TextView
            android:id="@+id/bt_aktivitas"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_active"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="@string/aktivitas"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@id/cardImage1"
            app:layout_constraintEnd_toEndOf="@id/cardImage1"
            app:layout_constraintHorizontal_bias="0.106"
            app:layout_constraintStart_toStartOf="@id/cardImage1"
            app:layout_constraintTop_toTopOf="@id/cardImage1"
            app:layout_constraintVertical_bias="0.041" />

        <TextView
            android:id="@+id/bt_konsumsi"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/konsumsi"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16dp"
            android:gravity="center"
            android:background="@drawable/button_nonactive"
            app:layout_constraintBottom_toBottomOf="@id/cardImage1"
            app:layout_constraintEnd_toEndOf="@id/cardImage1"
            app:layout_constraintHorizontal_bias="0.430"
            app:layout_constraintStart_toStartOf="@+id/bt_aktivitas"
            app:layout_constraintTop_toTopOf="@id/cardImage1"
            app:layout_constraintVertical_bias="0.042"/>

        <TextView
            android:id="@+id/bt_kegiatan"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/kegiatan"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16dp"
            android:gravity="center"
            android:background="@drawable/button_nonactive"
            app:layout_constraintBottom_toBottomOf="@id/cardImage1"
            app:layout_constraintEnd_toEndOf="@id/cardImage1"
            app:layout_constraintHorizontal_bias="0.760"
            app:layout_constraintStart_toStartOf="@+id/bt_konsumsi"
            app:layout_constraintTop_toTopOf="@id/cardImage1"
            app:layout_constraintVertical_bias="0.042"/>

        <FrameLayout
            android:id="@+id/group1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardImage2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.182"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:src="@drawable/line"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tv_judul1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/terbakar"
                android:textColor="@color/grey3"
                android:textSize="16sp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/tv_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/_600_kcal"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:src="@drawable/line"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/tv_judul2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/target"
                android:textColor="@color/grey3"
                android:textSize="16sp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/tv_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/_1000_kcal"
                android:textSize="20sp"
                android:layout_marginTop="70dp"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:src="@drawable/line"
                android:layout_marginTop="100dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tv_judul3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/sisa"
                android:textColor="@color/grey3"
                android:textSize="16sp"
                android:layout_marginTop="100dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/tv_desc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/_400_kcal"
                android:textSize="20sp"
                android:layout_marginTop="120dp"
                android:layout_marginStart="20dp"/>

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgressBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cpb_background_progressbar_color="#98BCA7"
                app:cpb_background_progressbar_width="10dp"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="#4CAF50"
                app:cpb_progressbar_width="10dp"
                app:cpb_round_border="true"
                android:layout_marginStart="280dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/animateTextPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_60"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginStart="305dp"
                android:layout_marginTop="60dp"/>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView1"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@+id/cardImage1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.354"
            app:layout_constraintStart_toStartOf="@+id/cardImage1"
            app:layout_constraintTop_toTopOf="@+id/cardImage1"
            app:layout_constraintVertical_bias="0.744"
            tools:listitem="@layout/item1" />

        <TextView
            android:id="@+id/tv_totalKalori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/total_kalori_761_kkal"
            android:textColor="@color/grey1"
            app:layout_constraintBottom_toBottomOf="@+id/cardImage1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="@+id/cardImage1"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView1"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tv_totalKalori,recyclerView1"
            android:visibility="gone"/>

        <!-- Group3 -->
        <HorizontalScrollView
            android:id="@+id/group3"
            android:layout_width="300dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardImage1"
            app:layout_constraintEnd_toEndOf="@+id/cardImage1"
            app:layout_constraintHorizontal_bias="0.414"
            app:layout_constraintStart_toStartOf="@+id/cardImage1"
            app:layout_constraintTop_toTopOf="@+id/cardImage1"
            app:layout_constraintVertical_bias="0.925"
            android:scrollbars="none"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <!-- cards1 -->
                <ImageView
                    android:id="@+id/cardsImage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/card2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/minum"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_semibold"
                    android:background="@drawable/button_minum"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"/>

                <!--Icon gelas-->

                <!--Icon gelas Horizontal-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/glass_full"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="45dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/glass_empty"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="45dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/glass_empty"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="45dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/glass_empty"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="45dp"/>

                <!--Icon gelas Vertikal-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/glass_empty"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="110dp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/glass_empty"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="110dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/glass_empty"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="110dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/glass_empty"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="110dp"/>

                <!-- cards2 -->
                <ImageView
                    android:id="@+id/cardsImage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/card2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/running"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="400dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jogging_30_menit"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="360dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mulai"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="380dp"/>

            </FrameLayout>

        </HorizontalScrollView>

        <ImageView
            android:id="@+id/cardImage2"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:background="@color/lightGreen"
            android:contentDescription="@string/greencard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardImage1"
            app:layout_constraintVertical_bias="0.045" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/resep_makanan"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/cardImage2"
            app:layout_constraintEnd_toEndOf="@id/cardImage2"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="@id/cardImage2"
            app:layout_constraintTop_toTopOf="@+id/cardImage2"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/tv_lihat_resep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/lihat_semua"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/cardImage2"
            app:layout_constraintEnd_toEndOf="@id/cardImage2"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toStartOf="@id/cardImage2"
            app:layout_constraintTop_toTopOf="@+id/cardImage2"
            app:layout_constraintVertical_bias="0.051" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@+id/cardImage2"
            app:layout_constraintEnd_toEndOf="@id/cardImage2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/cardImage2"
            app:layout_constraintTop_toTopOf="@+id/cardImage2"
            app:layout_constraintVertical_bias="0.45"
            tools:listitem="@layout/item2" />

        <ImageView
            android:id="@+id/cardImage3"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="24dp"
            android:background="@color/lightGreen"
            android:contentDescription="@string/greencard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardImage2"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/artikel"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/cardImage3"
            app:layout_constraintEnd_toEndOf="@id/cardImage3"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="@id/cardImage3"
            app:layout_constraintTop_toTopOf="@+id/cardImage3"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/tv_lihat_artikel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/lihat_semua"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/cardImage3"
            app:layout_constraintEnd_toEndOf="@id/cardImage3"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toStartOf="@id/cardImage3"
            app:layout_constraintTop_toTopOf="@+id/cardImage3"
            app:layout_constraintVertical_bias="0.051" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@+id/cardImage3"
            app:layout_constraintEnd_toEndOf="@id/cardImage3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/cardImage3"
            app:layout_constraintTop_toTopOf="@+id/cardImage3"
            app:layout_constraintVertical_bias="0.62"
            tools:listitem="@layout/item3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>